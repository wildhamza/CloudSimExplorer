modules = ["java", "java-11"]

[nix]
channel = "stable-24_05"
packages = ["maven"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "CloudSimulation"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "maven-run"

[[workflows.workflow]]
name = "CloudSimulation"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn clean compile exec:java -Dexec.mainClass=\"cloudsim.Main\""

[[workflows.workflow]]
name = "maven-run"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn clean compile exec:java -Dexec.mainClass=\"cloudsim.Main\""

[deployment]
run = ["sh", "-c", "mvn clean compile exec:java -Dexec.mainClass=\"cloudsim.Main\""]
